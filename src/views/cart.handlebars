<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
</head>
<body>
  <div class="header__cart">
    <h1>Carrito de Compras</h1>
    <a href="/">Ir a productos</a>
  </div>
    <div class="carrito_vacio">
  {{#if message}}
    <h3>{{message}}</h3>
  {{else}}
    </div>
    <div class="contenedor_cart">
      {{#each cart.products}}
        <div class="producto_carrito">
          <h3>{{this.product.name}}</h3>
          <p>Cantidad: {{this.quantity}}</p>
          <p>Precio: ${{this.product.price}}</p>
          {{!-- <p>Total: ${{this.product.totalPrice}}</p> <!-- Asegúrate de mostrar el total aquí --> --}}
          <form action="/api/cart/remove/{{this.product._id}}" method="POST">
            <button type="submit">Eliminar</button>
          </form>
        </div>
      {{/each}}
    </div>
  {{/if}}
</body>
</html>





